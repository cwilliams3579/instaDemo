<div class="container">
  <h1><%= params[:category] %></h1>
  <div class="row">
    <div class="col-md-4">
      <% if @plays.count == 0 %>
        <h3>There are no plays in this category</h3>
      <% else %>
        <% @plays.each do |play| %>
          <h2><%= link_to play.title, play_path(play) %></h2>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

<% link_to "Add PLay", new_play_path %>
