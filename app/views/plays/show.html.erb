<h1>Plays#show</h1>
<div class="container text-center">
  <div class="row">
    <div class="col-md-4">
      <h2 class="text-center"><%= @play.title %></h2>
      <p class="text-center"><%= @play.director %></p>
      <h3 class="text-center"><%= @play.description %></h3>
      <%= link_to 'Edit', edit_play_path(@play), class: "btn btn-primary waves-effect" %>
      <%= link_to 'Delete', play_path(@play), method: :delete, class: "btn btn-danger waves-effect" %>
    </div>
  </div>
  <%= link_to 'Back', root_path %>
</div>
