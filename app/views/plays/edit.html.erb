<div class="container">

  <div class="row">
      <div class="col-md-6 col-md-offset-3">
          <%= form_for(@play, :html => { multipart: true, class: "form-horizontal", role: "form"}) do |f| %>
          <div class="form-group">
            <%= f.label :category %><br>
            <%= select_tag(:category_id, options_for_select(@categories), :prompt => "Select Category", :class => "form-edit")  %>
          </div>
            <div class="form-group">
              <%= f.label :title %><br>
              <%= f.text_field :title, class: 'form-control'%>
            </div>

            <div class="form-group">
              <%= f.label :director %><br>
              <%= f.text_field :director, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :description %><br>
              <%= f.text_area :description, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.button(@plays, class: "btn btn-primary btn-lg btn-block waves-effect waves-light", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Processing..."}) %>
            </div>
          <% end %>
      </div>
    </div>
    <br>
    <div class="text-center">
      <%= link_to "Back", plays_path, class: "btn btn-link" %>
    </div>
</div>
